                filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#7ec710', GradientType=1 );
                */
            }
            input[type=range]::-webkit-slider-thumb {
                -webkit-appearance: none;
                width: 32px;
                height: 32px;
                border-radius: 100%;
                background: #FFF;
                box-shadow: 0 2px 5px rgba(0,0,0,.3);
            }
